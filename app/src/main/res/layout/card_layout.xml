<?xml version="1.0" encoding="utf-8"?>
<com.dbbest.a500px.ui.SquareCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    card_view:cardCornerRadius="@dimen/rectangle_radius"
    card_view:cardElevation="@dimen/card_elevation"
    card_view:cardMaxElevation="@dimen/card_elevation"
    card_view:contentPadding="@dimen/padding">

    <com.dbbest.a500px.ui.ImageSquareView
        android:id="@+id/image_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:scaleType="centerCrop"/>
</com.dbbest.a500px.ui.SquareCardView>