<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/vertical_margin"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/card_radius"
    app:cardElevation="@dimen/card_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_16dp">

        <RelativeLayout
            android:id="@+id/layout_bio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/layout_avatar"
                android:layout_width="@dimen/avatar_size"
                android:layout_height="@dimen/avatar_size"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_alignParentTop="true">

                <ImageView
                    android:id="@+id/image_avatar"
                    android:layout_width="@dimen/avatar_size"
                    android:layout_height="@dimen/avatar_size"
                    android:layout_marginEnd="@dimen/padding_16dp"
                    android:scaleType="centerCrop"/>

                <ImageView
                    android:id="@+id/image_shape"
                    android:layout_width="@dimen/avatar_size"
                    android:layout_height="@dimen/avatar_size"
                    android:layout_marginEnd="@dimen/padding_16dp"
                    android:src="@drawable/avatar_border"/>

            </FrameLayout>

            <TextView
                android:id="@+id/text_name"
                style="@style/TextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_16dp"
                tools:text="Name"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/layout_avatar"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/image_photo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/rectangle_height"
            android:layout_below="@+id/layout_bio"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/padding_16dp"
            android:elevation="@dimen/card_elevation"
            android:scaleType="centerCrop"
            android:src="@drawable/photo_shape"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>